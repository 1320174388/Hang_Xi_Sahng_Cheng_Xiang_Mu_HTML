/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page{
  background-color: #eceae8;
}
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row_between{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.row_around{
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}
.col{
  display: flex;
  flex-direction: column;
  
}
.col_between{
display: flex;
flex-direction: column;
justify-content: space-between;

}
.col_around{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
}
.click {
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  margin-right: 17rpx;
  border: 1rpx solid #D0D0D0;
}
