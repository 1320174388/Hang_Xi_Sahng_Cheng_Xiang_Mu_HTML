/* pages/order/order.wxss */

page {
  background: #262d49;
}

.page {
  display: flex;
  flex-direction: column;
  height: 100%;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 0;
  background: #262d49;
}

.navbar {
  flex: none;
  display: flex;
  background: #2d3958;
  width: 100%;
  justify-content: space-around;
  align-items: center;
}

.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}

.navbar .item.active {
  background: #4c557b;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: green;
}

.num {
  /* height: 52rpx;*/
  text-align: left;
  padding: 20rpx 36rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 0;
}

.order_name {
  background: #1a1f35;
  padding: 24rpx 36rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 0;
  line-height: 48rpx;
}

.order_name_img {
  margin-right: 39rpx;
  background: #4c557b;
  width: 100rpx;
  height: 100rpx;
}

.order_name_right {
  float: left;
  align-self: right;
}

.left {
  flex: 1;
  padding-right: 10rpx;
}

.order_name_cont {
  flex: 1;
  flex-flow: row wrap;
}

.cont_name {
}

.cont_specifications {
}

.cont_specifications_name {
  width: 100%;
  float: left;
  line-height: 36rpx;
  margin-left: 16rpx;
  /* overflow: hidden; */
  flex-flow: row wrap;
}

.number {
  height: 77rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 0;
  line-height: 77rpx;
  border-bottom: 1px solid #0e1222;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.price {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 0;
  /* text-align: right;
  /* display: flex;
  flex-direction: row-reverse; *
  align-self: right; */
  padding-right: 54rpx;
  border-bottom: 1px solid #0e1222;
}

.price_item {
  margin-right: 59rpx;
}

.state {
  padding: 15rpx 54rpx 20rpx 36rpx;
  height: 60rpx;
  font-size: 28rpx;
}

.state_item_btn {
  background-image: linear-gradient(-180deg, #5e6a96 0%, #4c557b 100%);
  border: 1px solid #979797;
  width: 175rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
  margin-top: 15rpx;
  float: right;
  align-items: center;
  position: relative
}

.boxx {  
  border-top: 1px solid #0e1222;
  margin-bottom: 30rpx;
}

.loading {
  padding: 10rpx;
  text-align: center;
  background: #fff;
  position: relative;
  color: #000;
}

.loading:before {
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear infinite;
}

.loading.complete:before {
  display: none;
}
