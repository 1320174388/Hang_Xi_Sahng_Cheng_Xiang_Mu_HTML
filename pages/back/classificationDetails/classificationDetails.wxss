  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  width: 513rpx;
  height: 441rpx;
}

.classification_content_img {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
}

.content_img {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #4c557b;
  border: 1px solid #979797;
  border-radius: 2rpx;
  margin-right: 41rpx;
}

.content_img image {
  width: 100%;
  height: 100%;
}

.classification_content_name {
  background: #2d3958;
