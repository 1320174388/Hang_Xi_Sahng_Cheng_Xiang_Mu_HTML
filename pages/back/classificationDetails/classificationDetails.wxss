  margin-top: 300rpx;
  color: #e1e1e1;
}

.classification_content_main {
  background: #2d3958;
  border-radius: 8rpx;
  margin-bottom: 48rpx;
  /* padding: 34rpx 42rpx 27.33rpx 52rpx; */
