page {
  background: #262d49;
}

.wrap {
  padding: 60rpx 105rpx 0 98rpx;
  display: flex;
  flex-direction: column;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 0;
}

.upimages {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 44rpx;
  width: 100%;
  height: 400rpx;
  border: 1px solid #979797;
  font-size: 34rpx;
  line-height: 305rpx;
  background: #2d3958;
}

.upimages_img {
  width: 100%;
  height: 100%;
}

.upimages_left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.upimages_left_icon {
  background: #4c557b;
  width: 80rpx;
  height: 80rpx;
}

.upimages_left_icon.active {
  background: #2d3958;
  border: 1px solid #979797;
}

