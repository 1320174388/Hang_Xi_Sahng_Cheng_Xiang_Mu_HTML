 /* 怪异盒模型 */
 view{
     box-sizing: border-box;
 }
 #wrap{
     background: #f4f3f2;
 }
 /* 头部图片 */
 .header{
     height: 469rpx;
     overflow: hidden;
 }
 .header>image{
     width: 100%;
 }
 /* 商品描述 */
 .describe{
     padding: 20rpx 30rpx;
     background: #fff;
     position: relative;
 }
 .describe>view:first-of-type{
     font-size: 40rpx;
     font-weight: bold;
     margin-bottom: 10rpx;
 }
 .describe>view:nth-of-type(2){
     color: #949494;
     font-size: 24rpx;
 }
 .describe>view:nth-of-type(3)>text{
     color: #949494;
     font-size: 28rpx;
     line-height: 80rpx;
 }
 .describe>view:nth-of-type(3)>text:first-of-type{
     color: #FF1656;
     font-size: 36rpx;
 }
 .describe>view:nth-of-type(3)>text:nth-of-type(2){
     text-decoration: line-through;
 }
 .describe>view:nth-of-type(3)>text:nth-of-type(3){
     float: right;
 }
 .describe>view:nth-of-type(4){
     font-size: 24rpx;
     color: #434343;
     font-weight: bold;
 }
 .describe>image:last-of-type{
     width: 37rpx;
     position: absolute;
     top: 60rpx;
     right: 40rpx;
 }
 /* 规格 */
 .spec{
        margin-top: 10rpx;
        background: #fff;
        padding: 20rpx 30rpx;
        line-height: 33rpx;
 }
 .spec>view:first-of-type{
     font-size: 40rpx;
     font-weight: bold;
     margin: 15rpx 0 20rpx;
 }
 .spec>view:first-of-type>text:last-of-type{
     float: right;
 }
 .spec>text{
     font-size: 24rpx;
     color: #949494;
 }
 /* 商品详情和评价 */
 .goods-detail{
     margin-top: 10rpx;
     height: 105rpx;
     background: #fff;
     display: flex;
     font-size: 30rpx;
 }
 .goods-detail>view{
     width: 50%;
     height: 100%;
     text-align: center;
     line-height: 100rpx;
     border-bottom: 6rpx solid #FFD259;
 }
 .goods-detail>.active{
     color: #FF2D7C;
     border-bottom: 6rpx solid #FF2D7C;
 }
 .footer{
     width: 100%;
     height: 108rpx;
     position: fixed;
     background: #f4f3f2;
     bottom: 0;
     left: 0;
     display: flex;
 }
 .footer>view{
     width: 25%;
     height: 100%;
     text-align: center;
     line-height: 108rpx;
 }
 .footer>view>image{
     width: 50rpx;
     height: 43rpx;
 }
 .footer>view:first-of-type{
     line-height: 30rpx;
     font-size: 22rpx;
     color: #979797;
     padding-top: 25rpx;
 }
 .footer>view:nth-of-type(2){
     line-height: 30rpx;
     font-size: 22rpx;
     color: #979797;
     padding-top: 25rpx;
 }
 .footer>view:nth-of-type(3){
     background: #FD9B39;
     color: #fff;
     font-size: 28rpx;
 }
 .footer>view:nth-of-type(4){
     background: #FF1058;
     color: #fff;
     font-size: 28rpx;
 }
 /* 规格的弹框 */
 .spec-alert{
     width: 100%;
     position: absolute;
     left: 0;
     bottom: 108rpx;
     background: #E6E6E6;
     padding: 20rpx 30rpx;
     display: flex;
     flex-wrap: wrap;
     justify-content: space-around;
 }
 .spec-alert>view{
     width: 283rpx;
     height: 56rpx;
     background: #F0F0F0;
     border: 1rpx solid #ccc;
     font-size: 28rpx;
     color: #949494;
     text-align: center;
     line-height: 56rpx;
     margin: 10rpx 0;
 }
 .spec-alert>.spec-alert-active{
     border: 1rpx solid #FF1756;
     color: #FF1656;
 }

