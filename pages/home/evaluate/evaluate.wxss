.ative {
  background: #ff1656;
  border: 1px solid #979797;
  height: 60rpx;
  margin: 10rpx;
  line-height: 52rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
   padding: 4rpx 15rpx;
}

.s_sp .specification.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

.main {
  font-size: 30rpx;
  color: #000;
  /* height: 80vw; */
  margin-bottom: 150rpx;
}

.navbar {
  flex: none;
  display: flex;
  background: #fff;
  height: 100rpx;
  border-bottom: 6rpx solid #ffd259;
}

.navbar .item {
  position: relative;
  flex: left;
  text-align: center;
  width: 150rpx;
  height: 100rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #000;
}

.navbar .item.active {
  color: #ff1656;
  border-bottom: 6rpx solid #ff1656;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

.cont_head {
  height: 107rpx;
  padding: 0 45rpx;
