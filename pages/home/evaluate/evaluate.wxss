  color: #000;
}

.cont_head_item {
  margin-right: 90rpx;
}

.list_wrap {
  margin-bottom: 120rpx;
}

.list {
  padding: 26rpx 27rpx 42rpx 53rpx;
  font-size: 30rpx;
  color: #000;
  display: flex;
  flex-direction: row;
}

.list_img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 88rpx;
