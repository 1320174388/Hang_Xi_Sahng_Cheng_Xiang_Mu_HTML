  align-items: center;
  height: 100%;
  width: 100%;
}

.foot_img {
  width: 53rpx;
  height: 44rpx;
}

.foot_right {
  font-size: 28rpx;
  color: #fff;
  line-height: 108rpx;
  text-align: center;
}

.foot_right_left {
  background-image: linear-gradient(-201deg, #f3a630 10%, #fd9b39 97%);
