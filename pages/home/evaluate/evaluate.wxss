}

.banner {
  width: 100%;
  height: 469rpx;
  background: #f3a630;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.head_cont {
  padding: 25rpx 36rpx 20rpx 28rpx;
  font-size: 28rpx;
  color: #949494;
  height: 268rpx;
  justify-content: space-around;
}

swiper {
