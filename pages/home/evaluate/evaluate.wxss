}

.text {
  margin-bottom: 18rpx;
}

.imgs {
  width: 200rpx;
  height: 200rpx;
  background: #f3a630;
}

.foot {
  z-index: 1;
  background: #f3f3f3;
  height: 110rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}

box {
  margin-bottom: 300rpx;
}

.foot_left {
  flex: 1;
  justify-content: space-around;
  font-size: 22rpx;
  color: #979797;
}

