.box_img {
  width: 100%;
}

.selet {
  width: 100%;
  margin-bottom: 25rpx;
  position: relative;
  background: #5e6a96;
}

.selet_item {
  width: 40%;
  padding-left: 20rpx;
  display: flex;
  text-align: center;
  align-items: center;
}

.item_main {
  position: absolute;
  top: 50rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #5e6a96;
  text-align: center;
  transition: height 0.3s;
  z-index: 10;
}

.num {
  width: 200rpx;
  height: 100%;
  color: #000;
  text-align: center;
  align-items: center;
  float: right;
}

.num .right_flex {
  flex: 1;
  height: 100%;
  line-height: 1.8;
  padding: auto;
  font-size: 40rpx;
}
