 view{
     box-sizing: border-box;
 }
 #wrap{
     display: flex;

 }
 .type{
     width: 35%;
     background: #f3f3f3;
 }
 .type>view{
     height: 140rpx;
     line-height: 140rpx;
     padding-left: 60rpx;
     font-size: 28rpx;
 }
 .active{
     font-size: 34rpx;
     color: #FF4360;
     border-left: 7rpx solid #ff3644;
     background: #fff;
 }
 .type-content{
     width: 64%;
     padding: 70rpx 0 0 10rpx;
 }
 .type-content>view{
     float: left;
     width: 100rpx;
     height: 200rpx;
     font-size: 24rpx;
     margin-left: 40rpx;
     text-align: center;
 }
 .type-content>view::after{
     content: "";
     display:block;
     clear: both;
     height: 0;
     visibility: hidden;
 }
 .type-content>view>image{
     width: 100%;
     height: 100rpx;
     margin-bottom: 10rpx;
 }