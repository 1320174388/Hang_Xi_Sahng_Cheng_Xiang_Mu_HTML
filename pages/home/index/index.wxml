<view id='wrap'>
    <!-- 轮播图 -->
    <swiper class='head-swiper' indicator-dots='true' autoplay='true' interval='2000' indicator-color='#fff' indicator-active-color='#ff4000' circular='true'>
        <swiper-item wx:for='{{swiperArr}}' wx:key=''>
            <image src='../images/swipeImage.png'></image>
        </swiper-item>
    </swiper>
    <!-- 中部导航 -->
    <view class='content-nav'>
        <view wx:for="{{navArr}}" wx:key="" bindtap='shopJump'>
            <image src='{{item.img}}' mode='widthFix'></image>
            <text>{{item.txt}}</text>
        </view>
    </view>
    <!-- 内容 今日特卖 -->
    <view class='content'>
        <view class='title-wrap'>
            <!-- 标题周边圆点 -->
            <view></view>
            <view></view>
            <view></view>
            <view></view>
            <!-- 文字 -->
            <text>今日特卖</text>
            <text>更多<image src='../images/next.png'></image></text>
        </view>
        <view class='content-shop'>
            <view wx:for="{{shopArr}}" wx:key="index" bindtap='jump_evaluate'>
                <image src='{{item.img}}' mode='widthFix'></image>
                <text>{{item.text}}</text>
                <text>￥{{item.price}}</text>
            </view>
        </view>
    </view>
    <!-- 内容 今日特卖 -->
    <view class='content'>
        <view class='title-wrap'>
            <!-- 标题周边圆点 -->
            <view></view>
            <view></view>
            <view></view>
            <view></view>
            <!-- 文字 -->
            <text>精品特卖</text>
            <text>更多》</text>
        </view>
        <view class='content-shop'>
            <view wx:for="{{shopArr}}" wx:key="index" bindtap='jump_evaluate'>
                <image src='{{item.img}}' mode='widthFix'></image>
                <text>{{item.text}}</text>
                <text>￥{{item.price}}</text>
            </view>
        </view>
    </view>
</view>