<view id='wrap'>
    <view class='header'>
        <view>全部</view>
        <view>最新</view>
        <view>
            <text>价格</text>
            <image src='../images/sort.svg' mode='widthFix'></image>
        </view>
        <view>销量</view>
    </view>
    <view class='content-wrap'>
        <view class='content' wx:for="{{shopList}}" wx:key="index">
            <image src='{{item.img}}'></image>
            <view>
                <text>{{item.title}}</text>
                <view>{{item.detail}}</view>
                <view>
                    100% 品控检测
                </view>
                <view>￥{{item.price}}</view>
                <text>已售:{{item.sell}}件</text>
                <view>
                    <image src='../images/shopping.svg' mode='widthFix'></image>
                </view>
            </view>
        </view>
    </view>
</view>
