/*主容器*/

.stepper {
  width: 80px;
  height: 26px;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #979797;
}

/*加号和减号*/

.stepper view {
  width: 48rpx;
  height: 48rpx;
  border-radius: 48rpx;
  border: 1rpx solid #979797;
  line-height: 48rpx;
  text-align: center;
  float: left;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #979797;
}

/*数值*/

.stepper input {
  width: 40px;
  height: 26px;
  float: left;
  /* margin: 0 auto; */
  text-align: center;
  font-size: 12px;
}

/*普通样式*/

.stepper .normal {
  color: #979797;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

